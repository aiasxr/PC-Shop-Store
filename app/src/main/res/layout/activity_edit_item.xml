<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1B"
    tools:context=".editItem">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@drawable/below_line"
        android:elevation="10sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="serif"
            android:paddingLeft="20sp"
            android:text="Update Item"
            android:textColor="#FFC107"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/header"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePhoto"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_person"
            android:src="@drawable/ic_outline_camera_alt_24"
            tools:ignore="MissingClass" />

        <ImageView
            android:id="@+id/select_image"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60sp"
            android:background="@drawable/round_camera"
            android:padding="10sp"
            android:src="@drawable/ic_outline_camera_alt_24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/photo">

        <TextView
            android:id="@+id/nameval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10sp"
            android:fontFamily="serif"
            android:text="Item Name"
            android:textColor="#FFC107"
            android:textSize="22dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/nameval"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_message"
            android:hint="Full Name"
            android:paddingLeft="20dp"
            android:textColor="#2196F3"
            android:textColorHint="#7D7C7C" />

        <TextView
            android:id="@+id/brandname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10sp"
            android:fontFamily="serif"
            android:text="Discription"
            android:textColor="#FFC107"
            android:textSize="22dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#193155"
            android:fontFamily="serif"
            android:text="Update Product"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/brandname"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_message"
            android:paddingLeft="20dp"
            android:textColor="#2196F3"
            android:textColorHint="#7D7C7C" />


        <TextView
            android:id="@+id/pricename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brand"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10sp"
            android:fontFamily="serif"
            android:text="Price"
            android:textColor="#FFC107"
            android:textSize="22dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/pricename"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_message"
            android:paddingLeft="20dp"
            android:textColor="#2196F3"
            android:textColorHint="#7D7C7C" />

        <TextView
            android:id="@+id/ratingname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10sp"
            android:fontFamily="serif"
            android:text="Rating"
            android:textColor="#FFC107"
            android:textSize="22dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/ratingname"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/round_message"
            android:paddingLeft="20dp"
            android:textColor="#2196F3"
            android:textColorHint="#7D7C7C" />

    </RelativeLayout>

</RelativeLayout>