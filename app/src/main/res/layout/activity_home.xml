<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home">





    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilepic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@drawable/dp"/>



    <ImageView
        android:id="@+id/cart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cart"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
            />


    <TextView
        android:id="@+id/textPopular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Popular Now"
        android:layout_below="@id/profilepic"
        android:fontFamily="@font/avenirblack"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/popularNow"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/textPopular"
        android:scaleType="center"
        android:src="@drawable/popularitem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Products"
        android:gravity="center_vertical"
        android:fontFamily="@font/avenirblack"
        android:layout_below="@id/popularNow"
        android:id="@+id/productS"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/productS"
        tools:listitem="@layout/itembox" />

</RelativeLayout>