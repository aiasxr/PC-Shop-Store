<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#B3EFEFEF"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/productImage"
        android:layout_toEndOf="@id/productImage"
        android:fontFamily="@font/avenirblack"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/productName"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/productImage"
        android:fontFamily="@font/avenirblack"
        android:text="48$"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/productAmount"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/productPrice"
        android:layout_alignStart="@id/productName"
        android:background="@drawable/credentialsboxbg"
        android:fontFamily="@font/avenirblack"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:maxLines="1"
        android:text="44"
        android:textSize="20sp"

        />

    <ImageButton
        android:id="@+id/Remove_from_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/productName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_baseline_remove_circle_outline_24" />

</RelativeLayout>